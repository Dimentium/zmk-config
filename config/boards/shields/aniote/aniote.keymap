            bindings = <&to BASE &kp F18 &kp CAPSLOCK>;};
        to_rus_r: to_rus_r {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&to BASE_RU &kp F19>;};
        rst: rst {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&to 0 &kt_off LSHFT &kt_off LCTRL &kt_off LALT &kt_off LGUI>;};
        to_punct: to_punct {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&tog PUNCT &tog_off DIGIT>;};
        to_digit: to_funct {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&tog DIGIT &tog_off PUNCT>;};
    };

    behaviors {
        td_copy_cut: tap_dance_copy_cut {
            compatible = "zmk,behavior-tap-dance";
            #binding-cells = <0>;
            tapping-term-ms = < TIMEOUT_TD >;
            bindings = <&kp LG(C)>, <&kp LG(X)>;};
        kt_off: key_toggle_off_only {
            compatible = "zmk,behavior-key-toggle";
            #binding-cells = <1>;
            display-name = "Key Toggle OFF";
            toggle-mode = "off";};
        tog_off: toggle_layer_off_only {
            compatible = "zmk,behavior-toggle-layer";
            #binding-cells = <1>;
            display-name = "Toggle Layer OFF";
            toggle-mode = "off";};
         bt_usb: behavior_mo_tog {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "hold-preferred";
            tapping-term-ms = <200>;
            bindings = <&mo>, <&out>; };

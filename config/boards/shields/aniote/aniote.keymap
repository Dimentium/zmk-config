combo_digit_##CHORD     { timeout-ms = <TIMEOUT_COMBO>; bindings = <DIGIT_BIND>     ; key-positions = <CHORD>; layers = <DIGIT>; }; \
combo_digit_##CHORD##RU { timeout-ms = <TIMEOUT_COMBO>; bindings = <DIGIT_BIND##_RU>; key-positions = <CHORD>; layers = <DIGIT_RU>; }; \

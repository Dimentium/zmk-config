// Layers
#define COLEMAK 0
#define QWERTY  1
#define ISRT    2
#define EXT     3
#define NAV     4
#define FUN     5
#define MICE    6
#define MICE2   7
#define SYSTEM  8

#define BV_AL1   9
#define BV_AL2   10
#define BV_AL3   11
#define BV_NUM   12
#define BV_NAV   13
#define BV_MICE2 14
#define BV_MICE  15
